<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.2.5"/>
  <object class="GtkAdjustment" id="adjustment">
    <property name="lower">5</property>
    <property name="upper">40</property>
    <property name="step-increment">1</property>
    <property name="page-increment">5</property>
  </object>

  <template class="FlowtimePreferencesWindow" parent="AdwPreferencesWindow">
    <property name="modal">true</property>
    <property name="default-height">320</property>
    <property name="default-width">330</property>

    <child>
      <object class="AdwPreferencesPage">
        <property name="title" translatable="yes">_Preferences</property>

        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="yes">Break Time</property>
            <property name="description" translatable="yes">Changes will be applied in the next work session</property>

            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="yes">Time until break</property>
                <property name="subtitle" translatable="yes">The time you have to work until a break is allowed.</property>
                <property name="icon-name">timer-sand-symbolic</property>
                <child>
                  <object class="GtkSpinButton" id="time_spin_button">
                    <property name="valign">center</property>
                    <property name="adjustment">adjustment</property>
                  </object>
                </child>
              </object>
            </child>

          </object>
        </child>

        <child>
          <object class="AdwPreferencesGroup" id="sounds_group">
            <property name="title" translatable="yes">Sounds</property>
            <property name="description" translatable="yes">Alarm sounds that mark break time</property>
          </object>
        </child>

      </object>
    </child>

  </template>

</interface>
